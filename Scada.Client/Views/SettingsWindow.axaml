<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Scada.Client.ViewModels"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="400"
        x:Class="Scada.Client.Views.SettingsWindow"
        x:DataType="vm:SettingsWindowViewModel"
        Title="Настройки подключения"
        Width="500" Height="400"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

    <Design.DataContext>
        <vm:SettingsWindowViewModel/>
    </Design.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Параметры подключения Modbus TCP" 
                   FontSize="18" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Форма настроек -->
        <StackPanel Grid.Row="1" Spacing="15">
            
            <!-- IP адрес -->
            <StackPanel>
                <TextBlock Text="IP адрес контроллера:" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Host}" 
                         Watermark="192.168.1.111"
                         Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Порт -->
            <StackPanel>
                <TextBlock Text="Порт:" FontWeight="SemiBold"/>
                <NumericUpDown Value="{Binding Port}" 
                               Minimum="1" 
                               Maximum="65535"
                               ShowButtonSpinner="True"
                               Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Unit ID -->
            <StackPanel>
                <TextBlock Text="Unit ID:" FontWeight="SemiBold"/>
                <NumericUpDown Value="{Binding UnitId}" 
                               Minimum="0" 
                               Maximum="255"
                               ShowButtonSpinner="True"
                               Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Интервал опроса -->
            <StackPanel>
                <TextBlock Text="Интервал опроса (мс):" FontWeight="SemiBold"/>
                <NumericUpDown Value="{Binding PollingIntervalMs}" 
                               Minimum="100" 
                               Maximum="10000"
                               Increment="100"
                               ShowButtonSpinner="True"
                               Margin="0,5,0,0"/>
            </StackPanel>

        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Spacing="10"
                    Margin="0,20,0,0">
            <Button Content="OK" 
                    Click="OnOkClick"
                    Width="100" 
                    Padding="10,5"
                    Classes="accent"/>
            <Button Content="Отмена" 
                    Click="OnCancelClick"
                    Width="100" 
                    Padding="10,5"/>
        </StackPanel>

    </Grid>
</Window>
