<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Scada.Client.ViewModels"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
    x:Class="Scada.Client.Views.SettingsWindow"
    x:CompileBindings="False"
        Title="Настройки подключения Modbus"
        Width="600" Height="400"
        WindowStartupLocation="CenterOwner">
    
    <Grid RowDefinitions="*,Auto" Margin="20">
        <StackPanel Grid.Row="0" Spacing="15">
            <TextBlock Text="Настройки Modbus TCP" FontSize="18" FontWeight="Bold"/>
            
            <StackPanel Spacing="10">
                <TextBlock Text="IP-адрес контроллера:" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Host}" Watermark="127.0.0.1"/>
            </StackPanel>
            
            <StackPanel Spacing="10">
                <TextBlock Text="Порт:" FontWeight="SemiBold"/>
                <NumericUpDown Value="{Binding Port}" Minimum="1" Maximum="65535" Increment="1"/>
            </StackPanel>
            
            <StackPanel Spacing="10">
                <TextBlock Text="Unit ID:" FontWeight="SemiBold"/>
                <NumericUpDown Value="{Binding UnitId}" Minimum="0" Maximum="255" Increment="1"/>
            </StackPanel>

            <StackPanel Spacing="10">
                <TextBlock Text="Интервал опроса, мс:" FontWeight="SemiBold"/>
                <NumericUpDown Value="{Binding PollingIntervalMs}" Minimum="100" Maximum="60000" Increment="100"/>
            </StackPanel>

            <Border Background="LightBlue" 
                    BorderBrush="DodgerBlue" 
                    BorderThickness="1" 
                    CornerRadius="4" 
                    Padding="10"
                    Margin="0,10,0,0">
                <StackPanel Spacing="8">
                    <TextBlock Text="📋 Конфигурация тегов" 
                               FontWeight="SemiBold"
                               FontSize="13"/>
                    <TextBlock Text="Для просмотра и редактирования тегов используйте встроенный редактор." 
                               TextWrapping="Wrap"
                               FontSize="11"
                               Foreground="DarkBlue"/>
                    <Button Content="🛠️ Открыть редактор тегов" 
                            Click="OpenTagsEditor_Click"
                            HorizontalAlignment="Left"
                            Padding="15,6"
                            Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,15,0,0">
            <Button Content="Сохранить" Click="SaveButton_Click" Padding="20,8"/>
            <Button Content="Отмена" Click="CancelButton_Click" Padding="20,8"/>
        </StackPanel>
    </Grid>
</Window>
