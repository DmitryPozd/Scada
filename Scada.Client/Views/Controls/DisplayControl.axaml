<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:Scada.Client.Views.Controls"
             x:Class="Scada.Client.Views.Controls.DisplayControl"
             x:DataType="controls:DisplayControl"
             Width="{Binding ControlWidth, RelativeSource={RelativeSource Self}}"
             Height="{Binding ControlHeight, RelativeSource={RelativeSource Self}}">
    
  <!-- Внешний Grid для маркеров -->
  <Grid>
    <!-- Внутренний Grid с содержимым -->
    <Grid RowDefinitions="Auto,*">
      <!-- Надпись над элементом -->
      <TextBlock Grid.Row="0"
                 Text="{Binding Label, RelativeSource={RelativeSource AncestorType=controls:DisplayControl}}" 
                 FontWeight="SemiBold" 
                 FontSize="11"
                 TextWrapping="Wrap"
                 TextAlignment="Center"
                 HorizontalAlignment="Center"
                 Margin="0,0,0,6"/>
      
      <!-- Основное содержимое -->
      <Border Grid.Row="1"
              Background="#E8F4F8" 
              BorderBrush="#4A90A4" 
              BorderThickness="2" 
              CornerRadius="4"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
        <StackPanel Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
          <!-- Значение -->
          <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="5">
            <TextBlock Text="{Binding DisplayValue, RelativeSource={RelativeSource AncestorType=controls:DisplayControl}}" 
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#2C5F6F"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding Unit, RelativeSource={RelativeSource AncestorType=controls:DisplayControl}}"
                       FontSize="14"
                       Foreground="#555555"
                       VerticalAlignment="Center"/>
          </StackPanel>
        </StackPanel>
      </Border>
    </Grid>
    
    <!-- Маркеры для изменения размера -->
    <!-- Правый нижний угол -->
    <Border x:Name="ResizeGripBottomRight"
            Width="12" 
            Height="12"
            Background="DarkGray"
            Opacity="0.7"
            CornerRadius="0,0,6,0"
            Cursor="SizeAll"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            PointerPressed="OnResizeGripPressed"
            PointerMoved="OnResizeGripMoved"
            PointerReleased="OnResizeGripReleased"/>
            
    <!-- Правый край -->
    <Border x:Name="ResizeGripRight"
            Width="6"
            Background="Transparent"
            Cursor="SizeWestEast"
            HorizontalAlignment="Right"
            VerticalAlignment="Stretch"
            Margin="0,6,0,6"
            PointerPressed="OnResizeGripPressed"
            PointerMoved="OnResizeGripMoved"
            PointerReleased="OnResizeGripReleased"/>
            
    <!-- Нижний край -->
    <Border x:Name="ResizeGripBottom"
            Height="6"
            Background="Transparent"
            Cursor="SizeNorthSouth"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            Margin="6,0,6,0"
            PointerPressed="OnResizeGripPressed"
            PointerMoved="OnResizeGripMoved"
            PointerReleased="OnResizeGripReleased"/>
  </Grid>
    
</UserControl>
