<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:Scada.Client.Views.Controls"
             x:Class="Scada.Client.Views.Controls.DisplayControl"
             x:DataType="controls:DisplayControl">
    
    <Border Background="#E8F4F8" 
            BorderBrush="#4A90A4" 
            BorderThickness="2" 
            CornerRadius="4"
            Width="180" 
            Height="80">
        
        <StackPanel Margin="10" VerticalAlignment="Center" Spacing="5">
            <!-- Метка -->
            <TextBlock Text="{Binding Label, RelativeSource={RelativeSource AncestorType=controls:DisplayControl}}" 
                       FontSize="12"
                       Foreground="#555555"
                       HorizontalAlignment="Center"/>
            
            <!-- Значение -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="5">
                <TextBlock Text="{Binding DisplayValue, RelativeSource={RelativeSource AncestorType=controls:DisplayControl}}" 
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#2C5F6F"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding Unit, RelativeSource={RelativeSource AncestorType=controls:DisplayControl}}"
                           FontSize="14"
                           Foreground="#555555"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
        
    </Border>
    
</UserControl>
