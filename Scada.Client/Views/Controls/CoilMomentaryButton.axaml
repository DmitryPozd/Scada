<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:Scada.Client.Views.Controls"
             x:Class="Scada.Client.Views.Controls.CoilMomentaryButton"
             Width="90" Height="100">
  
  <!-- Кнопка без фиксации (нажал-включил, отпустил-выключил) -->
  <Border x:Name="MainButton"
          Padding="8"
          CornerRadius="8"
          Background="{DynamicResource ControlFillColorDefaultBrush}"
          BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
          BorderThickness="1"
          Cursor="Hand">
    <StackPanel Spacing="6" HorizontalAlignment="Center">
      <!-- Название -->
      <TextBlock Text="{Binding Label, RelativeSource={RelativeSource AncestorType=controls:CoilMomentaryButton}}"
                 FontWeight="SemiBold" 
                 HorizontalAlignment="Center" 
                 FontSize="11"
                 TextWrapping="Wrap"
                 TextAlignment="Center"/>
      
      <!-- Визуальный индикатор состояния -->
      <Border Width="50" Height="35" CornerRadius="6" BorderThickness="2">
        <Border.BorderBrush>
          <Binding Path="IsActive" RelativeSource="{RelativeSource AncestorType=controls:CoilMomentaryButton}">
            <Binding.Converter>
              <controls:CoilStateBorderConverter/>
            </Binding.Converter>
          </Binding>
        </Border.BorderBrush>
        <Border.Background>
          <Binding Path="IsActive" RelativeSource="{RelativeSource AncestorType=controls:CoilMomentaryButton}">
            <Binding.Converter>
              <controls:CoilStateBackgroundConverter/>
            </Binding.Converter>
          </Binding>
        </Border.Background>
        <Grid>
          <!-- Иконка ON (когда активна и есть IconPathOn) -->
          <Image Name="IconOn" Stretch="Uniform">
            <Image.IsVisible>
              <MultiBinding Converter="{x:Static BoolConverters.And}">
                <Binding Path="IsActive" RelativeSource="{RelativeSource AncestorType=controls:CoilMomentaryButton}" />
                <Binding Path="IconPathOn" RelativeSource="{RelativeSource AncestorType=controls:CoilMomentaryButton}" Converter="{x:Static ObjectConverters.IsNotNull}" />
              </MultiBinding>
            </Image.IsVisible>
            <Image.Source>
              <Binding Path="IconPathOn" RelativeSource="{RelativeSource AncestorType=controls:CoilMomentaryButton}">
                <Binding.Converter>
                  <controls:PathToImageConverter/>
                </Binding.Converter>
              </Binding>
            </Image.Source>
          </Image>
          
          <!-- Иконка OFF (когда не активна и есть IconPathOff) -->
          <Image Name="IconOff" Stretch="Uniform">
            <Image.IsVisible>
              <MultiBinding Converter="{x:Static BoolConverters.And}">
                <Binding Path="IsActive" RelativeSource="{RelativeSource AncestorType=controls:CoilMomentaryButton}" Converter="{x:Static BoolConverters.Not}" />
                <Binding Path="IconPathOff" RelativeSource="{RelativeSource AncestorType=controls:CoilMomentaryButton}" Converter="{x:Static ObjectConverters.IsNotNull}" />
              </MultiBinding>
            </Image.IsVisible>
            <Image.Source>
              <Binding Path="IconPathOff" RelativeSource="{RelativeSource AncestorType=controls:CoilMomentaryButton}">
                <Binding.Converter>
                  <controls:PathToImageConverter/>
                </Binding.Converter>
              </Binding>
            </Image.Source>
          </Image>
          
          <!-- Текстовая иконка состояния (если нет изображений) -->
          <TextBlock Name="DefaultIcon">
            <TextBlock.IsVisible>
              <MultiBinding Converter="{x:Static BoolConverters.And}">
                <Binding Path="IconPathOn" RelativeSource="{RelativeSource AncestorType=controls:CoilMomentaryButton}" Converter="{x:Static ObjectConverters.IsNull}" />
                <Binding Path="IconPathOff" RelativeSource="{RelativeSource AncestorType=controls:CoilMomentaryButton}" Converter="{x:Static ObjectConverters.IsNull}" />
              </MultiBinding>
            </TextBlock.IsVisible>
            <TextBlock.FontSize>18</TextBlock.FontSize>
            <TextBlock.HorizontalAlignment>Center</TextBlock.HorizontalAlignment>
            <TextBlock.VerticalAlignment>Center</TextBlock.VerticalAlignment>
            <TextBlock.FontWeight>Bold</TextBlock.FontWeight>
            <TextBlock.Text>
              <Binding Path="IsActive" RelativeSource="{RelativeSource AncestorType=controls:CoilMomentaryButton}">
                <Binding.Converter>
                  <controls:CoilStateIconConverter/>
                </Binding.Converter>
              </Binding>
            </TextBlock.Text>
            <TextBlock.Foreground>
              <Binding Path="IsActive" RelativeSource="{RelativeSource AncestorType=controls:CoilMomentaryButton}">
                <Binding.Converter>
                  <controls:CoilStateTextColorConverter/>
                </Binding.Converter>
              </Binding>
            </TextBlock.Foreground>
          </TextBlock>
        </Grid>
      </Border>
      
      <!-- Текстовый индикатор -->
      <TextBlock FontSize="10" FontWeight="SemiBold" HorizontalAlignment="Center">
        <TextBlock.Text>
          <Binding Path="IsActive" RelativeSource="{RelativeSource AncestorType=controls:CoilMomentaryButton}">
            <Binding.Converter>
              <controls:MomentaryStateTextConverter/>
            </Binding.Converter>
          </Binding>
        </TextBlock.Text>
      </TextBlock>
    </StackPanel>
  </Border>
  
</UserControl>
