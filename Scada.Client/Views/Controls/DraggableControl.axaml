<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="100"
             x:Class="Scada.Client.Views.Controls.DraggableControl"
             x:DataType="controls:DraggableControl"
             xmlns:controls="using:Scada.Client.Views.Controls">
  
  <Grid>
    <Border Background="{DynamicResource ControlFillColorTransparentBrush}" 
            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}" 
            BorderThickness="1"
            CornerRadius="4"
            Padding="2">
      <ContentPresenter Content="{Binding $parent[controls:DraggableControl].Content}"/>
    </Border>
    
    <!-- Ручка для изменения размера (правый нижний угол) -->
    <Border x:Name="ResizeHandle"
            Width="16"
            Height="16"
            Background="#CC808080"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            CornerRadius="0,0,4,0"
            Cursor="SizeNWSE"
            Margin="0,0,-2,-2"
            IsVisible="False">
      <Path Data="M 2,14 L 14,2 M 6,14 L 14,6 M 10,14 L 14,10"
            Stroke="White"
            StrokeThickness="2"
            Margin="2"/>
    </Border>
  </Grid>
  
</UserControl>
