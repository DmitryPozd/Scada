<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="150" d:DesignHeight="80"
             x:Class="Scada.Client.Views.Controls.CoilReadButton"
             x:Name="Root">
  
  <Border BorderBrush="{DynamicResource AccentFillColorDefaultBrush}"
          BorderThickness="2"
          CornerRadius="5"
          Background="LightBlue"
          MinWidth="150" MinHeight="80"
          Padding="8">
    
    <Grid RowDefinitions="Auto,Auto,Auto">
      <!-- Label -->
      <TextBlock Grid.Row="0" 
                 Text="{Binding #Root.Label}"
                 HorizontalAlignment="Center"
                 FontSize="12"
                 FontWeight="Bold"
                 Margin="0,0,0,4"/>
      
      <!-- Address Display -->
      <TextBlock Grid.Row="1"
                 Text="{Binding #Root.CoilAddress, StringFormat='Адрес: {0}'}"
                 HorizontalAlignment="Center"
                 FontSize="10"
                 Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                 Margin="0,0,0,4"/>
      
      <!-- Read Button and Status -->
      <Grid Grid.Row="2" ColumnDefinitions="*,Auto">
        <Button Grid.Column="0"
                Content="Читать"
                Command="{Binding #Root.ReadCommand}"
                Padding="8,4"
                FontSize="11"
                Margin="0,0,4,0"/>
        
        <!-- Status Indicator -->
        <Border Grid.Column="1"
                x:Name="StatusBorder"
                Width="20" Height="20"
                CornerRadius="10"
                Background="Gray"
                BorderBrush="{DynamicResource AccentFillColorDefaultBrush}"
                BorderThickness="1">
          <TextBlock x:Name="StatusText"
                     Text="?"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     FontSize="10"
                     FontWeight="Bold"
                     Foreground="White"/>
        </Border>
      </Grid>
    </Grid>
  </Border>
</UserControl>