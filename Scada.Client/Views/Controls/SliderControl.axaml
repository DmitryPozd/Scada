<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:Scada.Client.Views.Controls"
             x:Class="Scada.Client.Views.Controls.SliderControl"
             Width="200" Height="150">
  
  <Border Padding="10"
          CornerRadius="8"
          Background="{DynamicResource ControlFillColorDefaultBrush}"
          BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
          BorderThickness="1">
    <StackPanel Spacing="8">
      <!-- Название -->
      <TextBlock Text="{Binding Label, RelativeSource={RelativeSource AncestorType=controls:SliderControl}}"
                 FontWeight="SemiBold" 
                 HorizontalAlignment="Center"
                 FontSize="12"/>
      
      <!-- Ползунок -->
      <Slider Minimum="{Binding MinValue, RelativeSource={RelativeSource AncestorType=controls:SliderControl}}"
              Maximum="{Binding MaxValue, RelativeSource={RelativeSource AncestorType=controls:SliderControl}}"
              Value="{Binding CurrentValue, RelativeSource={RelativeSource AncestorType=controls:SliderControl}, Mode=TwoWay}"
              TickFrequency="1"
              IsSnapToTickEnabled="True"
              Width="180"
              x:Name="MainSlider"/>
      
      <!-- Отображение текущего значения -->
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="5">
        <TextBlock Text="Значение:" FontSize="11" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
        <TextBlock Text="{Binding CurrentValue, RelativeSource={RelativeSource AncestorType=controls:SliderControl}}"
                   FontWeight="Bold"
                   FontSize="12"/>
      </StackPanel>
      
      <!-- Кнопка записи -->
      <Button Content="Записать" 
              Command="{Binding WriteCommand, RelativeSource={RelativeSource AncestorType=controls:SliderControl}}"
              HorizontalAlignment="Center"
              Padding="20,4"
              FontSize="11"
              x:Name="WriteButton"/>
    </StackPanel>
  </Border>
  
</UserControl>
