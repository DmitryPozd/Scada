<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="120"
             x:Class="Scada.Client.Views.Controls.InputBitsIndicator"
             x:Name="Root">
  
  <Border BorderBrush="Blue"
          BorderThickness="3"
          CornerRadius="5"
          Background="LightYellow"
          MinWidth="200" MinHeight="120"
          Padding="10">
    
    <StackPanel Spacing="8">
      <!-- Label -->
      <TextBlock Text="{Binding #Root.Label}"
                 HorizontalAlignment="Center"
                 FontSize="14"
                 FontWeight="Bold"
                 Foreground="Black"/>
      
      <!-- Address Display -->
      <TextBlock Text="{Binding #Root.StartAddress, StringFormat='Адрес: {0}'}"
                 HorizontalAlignment="Center"
                 FontSize="10"
                 Foreground="DarkBlue"/>
      
      <!-- Bits Grid -->
      <ItemsControl x:Name="BitsPanel">
        <ItemsControl.ItemsPanel>
          <ItemsPanelTemplate>
            <WrapPanel Orientation="Horizontal"/>
          </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
      </ItemsControl>
    </StackPanel>
  </Border>
</UserControl>
